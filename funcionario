class Funcionario:
    def __init__(self, nome, salario):
        self.nome = nome
        self.salario = salario

    def getNome(self):
        return self.nome

    def getSalario(self):
        return self.salario

if __name__ == "__main__":
    funcionario1 = Funcionario("João", 2000.00)
    funcionario2 = Funcionario("Maria", 3000.00)

    print(f"Nome do funcionário 1: {funcionario1.getNome()}")
    print(f"Salário do funcionário 1: {funcionario1.getSalario()}")

    print(f"Nome do funcionário 2: {funcionario2.getNome()}")
    print(f"Salário do funcionário 2: {funcionario2.getSalario()}")
